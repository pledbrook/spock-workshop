{{#partial "content"}}
    <form class="form-horizontal" method="post">
        <div class="form-group">
            <label for="contents" class="col-sm-2 control-label">Contents</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="contents" name="contents" value="{{todo.contents}}">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" name="completed" {{#if todo.completed}}checked="checked"{{/if}}> Completed
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">{{block "submitText"}}</button>
            </div>
        </div>
    </form>
{{/partial}}

{{> layout.html}}